<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#2B0F68"
    tools:context=".ui.LoginActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/logologin"
        />
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập tài khoản"
        android:textStyle="bold"
        android:textColor="#EAD626"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivlogo"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_15sdp"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="2dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="8dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edUserNameLG"
            android:inputType="text"
            android:textSize="30dp"
            android:padding="8dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="2dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="8dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edPasswordLG"
            android:textSize="30dp"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btDangnhap"
            android:text="Đăng nhập"
            android:textStyle="bold"
            android:textColor="#E2F80C"
            android:textSize="27sp"
            android:backgroundTint="#75857C"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/btRegister"
            android:text="Đăng kí"
            android:textStyle="bold"
            android:textColor="#E2F80C"
            android:textSize="27sp"
            android:backgroundTint="#75857C"
            android:textAllCaps="false"/>
    </LinearLayout>

    <TextView
        android:id="@+id/BackfromLogin"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="200dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:gravity="center"
        android:layout_height="40dp"
        android:text="Quay lại trang chủ" />
</LinearLayout>


